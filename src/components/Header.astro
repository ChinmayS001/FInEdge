---
import logo from '../images/logo.png'
---

<header class="header">
  <div class="container">
    <div class="logo">
      <a href="/">
        <img style = "border-radius:50%;" src = {logo} alt="" />
      </a>
    </div>
    <nav>
      <ul>
        <li><a href="#Services">Services</a></li>
        <li><a href="#About">About Us</a></li>
        <li><a href="#ContactUs">Contact Us</a></li>
      </ul>
    </nav>
  </div>
</header>
<style>
      .header {
  height: 70px;
  background: var(--color-primary);
  width:100%;
}

.header .container {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 20px;
}

.header img {
  height: 35px;
  vertical-align: middle;
}

.header nav ul {
  display: flex;
}

.header nav ul li {
  padding: 0 10px;
}

.header nav ul li a { 
  color: #fff;
}
</style>